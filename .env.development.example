# ===========================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env.development and fill in your values

# ===========================================
# TESTING MODE
# ===========================================
# Set to 'true' to enable test mode (no real API calls)
# Set to 'false' to test with real Freshdesk API
TEST_MODE=false

# ===========================================
# FRESHDESK API (Server-side only)
# ===========================================
# These variables are NOT exposed to the browser
# Get your API key from: https://yellowfolder.freshdesk.com/a/admin/profile
FRESHDESK_KEY_PROD="changeme"
FRESHDESK_BASE_URL="https://yellowfolder.freshdesk.com"

# ===========================================
# FRESHCHAT (Client-side - Safe to expose)
# ===========================================
# This token is safe to expose to browsers
NEXT_PUBLIC_FRESHCHAT_TOKEN="changeme"
